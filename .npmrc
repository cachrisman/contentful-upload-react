# pnpm configuration
node-linker=hoisted
auto-install-peers=true
strict-peer-dependencies=false
save-exact=false
prefer-frozen-lockfile=true

# Performance optimizations
enable-pre-post-scripts=true

# Speeds up workspace installs by skipping audit and update checks
ignore-scripts=false
verify-store-integrity=false

# Optional but nice for CI/CD
frozen-lockfile=true

# Keep consistent engine versions
engine-strict=false

# Improve readability of install output
reporter=default